<h1>Cart</h1>

<div id="card">
{{#if courses.length}}
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Quantity</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>

      {{#each courses}}
      <tr>
        <td>{{title}}</td>
        <td>{{count}}</td>
        <td>
          <button
            class="btn btm-small js-remove navbarcolor"
            data-id="{{id}}"
            data-csrf="{{@root.csrf}}"
          >Delete</button>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>

  <p><strong>Price:</strong> <span class="price">{{price}}</span></p>

  <form action="/orders" method="POST">
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <button type="submit" class="btn navbarcolor">Make order</button>
  </form>
{{else}}
  <p>Cart Empty</p>
{{/if}}
</div>
